<!-- Piece for building pitch snake robots
     These pieces are connected forming a chain
--> 

<Kinbody name="kTriangleYPP">
  <Body name="TriYPP" type="dynamic">
      <mass type="sphere">
        <total>0.075</total>
        <radius>0.051</radius>
      </mass>
     
      <Geom type="trimesh">
        <Render>Y1-body.iv 0.001</Render>
        <data>Y1-body.iv 0.001</data>
        <rotationaxis>0 1 0 -90</rotationaxis>
        <translation>0 -0.018 -0.007</translation>
      </Geom> 
      <Geom type="trimesh">
        <Render>Y1-body.iv 0.001</Render>
        <data>Y1-body.iv 0.001</data>
        <rotationaxis>0 0 1 -120</rotationaxis>
        <translation>0.0286 -0.067500 -0.007</translation> 
      </Geom>
      <Geom type="trimesh">
        <Render>Y1-body.iv 0.001</Render>
        <data>Y1-body.iv 0.001</data>
        <rotationaxis>0 0 1 120</rotationaxis>
        <translation>-0.0286 -0.067500 -0.007</translation> 
      </Geom>
  </Body>
</Kinbody>


